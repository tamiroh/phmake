{
    "name": "tamiroh/phmake",
    "description": "Re-implementation of GNU Make written in PHP.",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Tamiroh\\Phmake\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tamiroh\\Phmake\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "tamiroh",
            "email": "tamiroh71@gmail.com"
        }
    ],
    "require-dev": {
        "phpstan/phpstan": "^2.1.32",
        "phpunit/phpunit": "^12.4.3",
        "carthage-software/mago": "^1.1.0"
    },
    "config": {
        "allow-plugins": {
            "carthage-software/mago": true
        }
    }
}
